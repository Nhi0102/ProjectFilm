<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ui.admin.user.UserManageFragment">

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Quay lại"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title_manage_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Người Dùng"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Container tìm kiếm gồm EditText + nút tìm -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_title_manage_users"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_search_user"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Tìm kiếm người dùng"
            android:padding="12dp"
            android:background="@drawable/search_edit_background"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/btn_search_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/search_button_background"
            android:src="@drawable/ic_search_white"
            android:contentDescription="Tìm kiếm"
            android:scaleType="centerInside"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Danh sách người dùng -->
    <ListView
        android:id="@+id/list_view_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Nút xóa người dùng -->
    <Button
        android:id="@+id/btn_delete_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xóa Người Dùng"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B00020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
