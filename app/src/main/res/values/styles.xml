<resources>
    <!-- Style cho BottomNavigationView với icon lớn -->
    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ✅ Style cho ShapeableImageView bo góc ảnh -->
    <style name="RoundedImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ✅ Style cho tiêu đề lớn -->
    <style name="MovieTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ✅ Style cho văn bản thông thường -->
    <style name="MovieBodyText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ✅ Style cho nhãn (label) như "Giờ chiếu", "Số lượng vé" -->
    <style name="MovieLabelText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- ✅ Style cho nút đặt vé -->
    <style name="MovieButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#FF3D00</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>